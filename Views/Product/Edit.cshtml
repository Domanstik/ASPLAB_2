@{
}

@model ASPLAB_2.Models.Product

<h1>Edit Product</h1>

@if (Model is null)
{
    <p>No Product was found</p>
}
else 
{
    <form method="post">
        <div class="mt-3">
            <label class=" form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class=" form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class=" form-label">Prise</label>
            <input type="text" class="form-control" asp-for="Prise" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Product">Delete</button>
        </div>
    </form>
}
